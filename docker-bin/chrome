docker run -it \
    --net host \
    --memory 1G \
    --rm \
    -v /tmp/.X11-unix:/tmp/.X11-unix \
    -e DISPLAY=unix$DISPLAY \
    -v $HOME:$HOME \
    -v $HOME/.config/google-chrome/:/data \
    -v /dev/shm:/dev/shm \
    --device /dev/snd \
    --name chrome \
    --privileged \
    jess/chrome
