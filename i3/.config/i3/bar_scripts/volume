[[ -z $DEVICE ]] && DEVICE="Master"
volume=$(amixer -D pulse get $DEVICE | grep -E -o '[0-9]{1,3}?%' | head -1)

muted_count=$(amixer -D pulse get $DEVICE | grep off | wc -l)

if [ $muted_count -gt 0 ]; then
echo "ðŸ”ˆoff"
exit
fi

echo "ðŸ”Š ${volume}"

