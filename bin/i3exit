#!/usr/bin/env bash
curdir="$(dirname "$0")"

source "$curdir/screenlocker.sh"

case "$1" in
    lock)
		lock
        ;;
    logout)
        i3-msg exit
        ;;
    #suspend)
        #lock && systemctl suspend
        #;;
    #hibernate)
        #lock && systemctl hibernate
        #;;
    reboot)
        systemctl reboot
        ;;
    shutdown)
        systemctl poweroff
        ;;
    *)
        echo "Usage: $0 {lock|logout|hibernate|reboot|shutdown}"
        exit 2
esac

exit 0
