#!/bin/sh
PROJECT_NAME=$1

tmux has-session -t $PROJECT_NAME
tmux new-session -s $PROJECT_NAME -n home -d
tmux new-window -t $PROJECT_NAME:1 -c ./ 
tmux rename-window -t $PROJECT_NAME:1 'editor'
tmux send-keys 'vim' 'C-m'

tmux new-window -t $PROJECT_NAME:2  -c ./ 
tmux rename-window -t $PROJECT_NAME:2 'console'
tmux select-window -t $PROJECT_NAME:1                                 
tmux -2 attach-session -t $PROJECT_NAME
