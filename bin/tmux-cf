#!/bin/sh
PROJECT_NAME=cf

tmux has-session -t $PROJECT_NAME
tmux new-session -s $PROJECT_NAME -n home -d

tmux new-window -t $PROJECT_NAME:1 -c /cf/code/Ambrosia
tmux rename-window -t $PROJECT_NAME:1 'ambrosia'

tmux new-window -t $PROJECT_NAME:2 -c /cf/code/Mercury
tmux rename-window -t $PROJECT_NAME:2 'mercury'

tmux new-window -t $PROJECT_NAME:3 -c /cf/code/Atlas
tmux rename-window -t $PROJECT_NAME:3 'atlas'

tmux new-window -t $PROJECT_NAME:4 -c /cf/code/Xenia
tmux rename-window -t $PROJECT_NAME:4 'xenia'

tmux new-window -t $PROJECT_NAME:5 -c /cf/code/Apollo
tmux rename-window -t $PROJECT_NAME:5 'apollo'

tmux new-window -t $PROJECT_NAME:6 -c /cf/code/Crateris
tmux rename-window -t $PROJECT_NAME:6 'crateris'

tmux new-window -t $PROJECT_NAME:7 -c /cf/code/Charon
tmux rename-window -t $PROJECT_NAME:7 'charon'

tmux new-window -t $PROJECT_NAME:8 -c /cf/code/ZFCommon
tmux rename-window -t $PROJECT_NAME:8 'zfcommon'

tmux -2 attach-session -t $PROJECT_NAME
