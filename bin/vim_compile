#!/bin/bash
pushd /tmp
git clone git@github.com:vim/vim.git
cd vim
./configure --with-features=huge \
    --enable-multibyte \
    --with-compiledby="Gianluca Arbezzano <ga@thumpflow.com>" \
    --enable-perlinterp \
    --enable-pythoninterp \
    --enable-rubyinterp \
    --enable-cscope \
    --enable-gui=auto \
    --with-features=huge \
    --enable-multibyte
make
sudo make install
pushd
