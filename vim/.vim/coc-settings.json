{
  "languageserver": {
    "terraform": {
			"command": "terraform-ls",
			"args": ["serve"],
			"filetypes": [
				"terraform",
				"tf"
			],
			"initializationOptions": {},
			"settings": {}
		},
    "nix": {
      "command": "nil",
      "filetypes": [
        "nix"
      ]
    },
    "go": {
      "rootPatterns": [
        "go.mod",
        ".vim/",
        ".git/",
        ".hg/"
      ],
      "command": "gopls",
      "filetypes": [
        "go"
      ],
      "args": []
    }
  },
  "yaml.format.enable": true,
  "coc.source.buffer.enable": false,
  "coc.source.file.enable": false,
  "coc.source.around.enable": false,
  "coc.preferences.useTmuxTerminal": true,
  "coc.preferences.extensionUpdateCheck": "daily",
  "javascript.suggestionActions.enabled": true,
  "typescript.suggestionActions.enabled": true,
  "prettier.printWidth": 120,
  "prettier.singleQuote": true,

  "snippets.userSnippetsDirectory": "~/.vim/mysnippets",
  "grammarly.diagnostic": {
    "[markdown]": {
      "ignore": ["inlineCode", "code"]
    }
  },
  "snippets.ultisnips.pythonPrompt": false,
  "svelte.enable-ts-plugin": false,

  "python.linting.flake8Enabled": true,
  "pyright.organizeimports.provider": "isort",
  "python.formatting.provider": "black",
}
