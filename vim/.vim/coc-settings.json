{
    "languageserver": {
      "phplang": {
        "command": "php",
        "args": ["/home/gianarb/.config/composer/vendor/bin/php-language-server.php"],
        "filetypes": ["php"]
      },
      "sh": {
        "command": "bash-language-server",
        "args": [
          "start"
        ],
        "filetypes": ["sh", "bash"]
      },
      "go": {
        "rootPatterns": ["go.mod", ".vim/", ".git/", ".hg/"],
        "command": "gopls",
        "filetypes": ["go"],
        "args": []
      }
  },
  "yaml.customTags": ["!Ref", "!Join", "!GetAtt"],
  "yaml.format.enable": true,
  "coc.source.gocode.enable": false,
  "coc.preferences.autoTrigger": "trigger",
  "coc.preferences.triggerAfterInsertEnter": false,
  "coc.source.ultisnips.enable": true
}
