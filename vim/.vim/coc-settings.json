{
  "languageserver": {
    "nix": {
      "command": "rnix-lsp",
      "filetypes": [
        "nix"
      ]
    },
    "go": {
      "rootPatterns": [
        "go.mod",
        ".vim/",
        ".git/",
        ".hg/"
      ],
      "command": "gopls",
      "filetypes": [
        "go"
      ],
      "args": []
    }
  },
  "yaml.format.enable": true,
  "coc.source.buffer.enable": false,
  "coc.source.file.enable": false,
  "coc.source.around.enable": false,
  "coc.preferences.useTmuxTerminal": true,
  "coc.preferences.extensionUpdateCheck": "daily",
  "rust-analyzer.diagnostics.enable": true,
  "rust-analyzer.diagnostics.disabled": ["unresolved-proc-macro"],
  "rust-analyzer.inlayHints.typeHints.enable": true,
  "rust-analyzer.inlayHints.closureReturnTypeHints.enable": true,
  "rust-analyzer.debug.runtime": "vimspector",
  "rust-analyzer.checkOnSave.command": "clippy",
  "rust-analyzer.server.path": "/run/current-system/sw/bin/rust-analyzer",
  "snippets.userSnippetsDirectory": "~/.vim/mysnippets",
  "grammarly.diagnostic": {
    "[markdown]": {
      "ignore": ["inlineCode", "code"]
    }
  }
}
