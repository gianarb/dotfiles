{
  "languageserver": {
    "nix": {
      "command": "rnix-lsp",
      "filetypes": [
        "nix"
      ]
    },
    "go": {
      "rootPatterns": [
        "go.mod",
        ".vim/",
        ".git/",
        ".hg/"
      ],
      "command": "gopls",
      "filetypes": [
        "go"
      ],
      "args": []
    }
  },
  "yaml.format.enable": true,
  "coc.preferences.extensionUpdateCheck": "never",
  "grammarly.diagnostic": {
    "[markdown]": {
      "ignore": ["inlineCode", "code"]
    }
  }
}
